[run]
# Directory to measure coverage for
source = internal, infrastructure, pkg

# Omit certain files from coverage
omit =
    # Test files
    */tests/*
    */test_*.py
    */__pycache__/*

    # Virtual environments
    */venv/*
    */env/*
    */.venv/*

    # Migration files
    */migrations/*

    # Generated files
    */__init__.py

# Run coverage for multiprocessing
parallel = True
concurrency = multiprocessing,thread

[report]
# Precision for coverage percentages
precision = 2

# Show lines that weren't covered
show_missing = True

# Skip files with 100% coverage in report
skip_covered = False

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug code
    def __repr__
    def __str__

    # Don't complain if tests don't cover defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain about abstract methods
    @abc.abstractmethod
    @abstractmethod

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about type checking blocks
    if typing.TYPE_CHECKING:

# Fail if coverage is below this threshold
fail_under = 70.0

[html]
# Directory for HTML report
directory = htmlcov

[xml]
# File for XML report (for CI/CD)
output = coverage.xml
