FROM python:3.12

WORKDIR /app

COPY .github/requirements.txt /app/requirements.txt
COPY .github/requirements-test.txt /app/requirements-test.txt

RUN pip install --index-url https://pypi.org/simple --no-cache-dir -r requirements.txt && \
    pip install --index-url https://pypi.org/simple --no-cache-dir -r requirements-test.txt

COPY . .

CMD ["python3", "-m", "pytest", "tests/", "-v", "--tb=short"]
